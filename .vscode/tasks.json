
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start client",
            "type": "shell",
            "command": "cd client/ && npm start",
            // "windows": {
            //     "command": "cd client/ && npm start"
            // },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen",
            }
        },
        {
            "label": "start server",
            "type": "shell",
            "command": "cd server/ && nodemon --experimental-modules --es-module-specifier-resolution=node index.js",
            // "windows": {
            //     "command": "cd server/ && nodemon"
            // },
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen",
            }
        }
    ]
}


